# نظام تتبع سلوك المستخدم - سبق الذكية
# User Behavior Tracking System - Environment Configuration

# ===== إعدادات التطبيق العامة =====
APP_NAME="Sabq User Tracking System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG="true"

# ===== إعدادات قاعدة البيانات =====
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="sabq_tracking"
DB_USER="sabq_user"
DB_PASSWORD="sabq_password_2024"
DB_POOL_SIZE="20"
DB_MAX_OVERFLOW="30"

# ===== إعدادات Redis =====
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="sabq_redis_2024"
REDIS_DB="0"
REDIS_MAX_CONNECTIONS="100"

# ===== إعدادات Kafka (للمعالجة المتقدمة) =====
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_CLIENT_ID="sabq-tracking-client"
KAFKA_GROUP_ID="sabq-tracking-group"

# ===== إعدادات الأمان =====
SECRET_KEY="your-secret-key-change-in-production-must-be-32-chars-long"
ENCRYPTION_KEY="your-encryption-key-32-chars-long"
DATA_RETENTION_DAYS="365"

# ===== إعدادات التتبع =====
TRACKING_BATCH_SIZE="100"
TRACKING_FLUSH_INTERVAL="5"
READING_SESSION_TIMEOUT="300"

# ===== إعدادات الخصوصية =====
ANONYMIZE_IP="true"
RESPECT_DO_NOT_TRACK="true"
GDPR_COMPLIANCE="true"

# ===== إعدادات المراقبة =====
ENABLE_METRICS="true"
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# ===== إعدادات CORS =====
ALLOWED_ORIGINS="http://localhost:3000,https://sabq.ai"
