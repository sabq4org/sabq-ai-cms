# متغيرات البيئة للبودكاست

# إعدادات قاعدة البيانات
DATABASE_URL="postgresql://username:password@localhost:5432/sabq_cms"

# إعدادات التخزين (AWS S3 أو مشابه)
STORAGE_BUCKET_NAME="sabq-podcast-storage"
STORAGE_REGION="me-south-1"
STORAGE_ACCESS_KEY="your-access-key"
STORAGE_SECRET_KEY="your-secret-key"

# إعدادات البودكاست
PODCAST_MAX_FILE_SIZE=104857600  # 100MB
PODCAST_ALLOWED_FORMATS="mp3,wav,m4a"
PODCAST_BASE_URL="https://cdn.sabq.ai/podcast"

# إعدادات الذكاء الاصطناعي للنصوص المقروءة
AI_TTS_SERVICE="azure"  # azure, google, aws
AI_TTS_API_KEY="your-tts-api-key"
AI_TTS_REGION="eastus"

# إعدادات النسخ التلقائي (Speech-to-Text)
AI_STT_SERVICE="azure"  # azure, google, aws
AI_STT_API_KEY="your-stt-api-key"

# إعدادات تحليلات الاستماع
ANALYTICS_TRACKING=true
ANALYTICS_PROVIDER="google"  # google, mixpanel, custom
ANALYTICS_ID="GA-XXXXXXXXX"

# إعدادات التخزين المؤقت
CACHE_EPISODES_TTL=3600  # ساعة واحدة
CACHE_CATEGORIES_TTL=86400  # 24 ساعة

# إعدادات الأمان
PODCAST_ADMIN_SECRET="your-admin-secret-key"
PODCAST_API_RATE_LIMIT=100  # طلب في الدقيقة

# إعدادات CDN
CDN_ENDPOINT="https://cdn.sabq.ai"
CDN_CACHE_CONTROL="public, max-age=3600"

# إعدادات الإشعارات
PUSH_NOTIFICATIONS=true
NOTIFICATION_SERVICE="firebase"  # firebase, onesignal
NOTIFICATION_API_KEY="your-notification-key"

# إعدادات RSS
RSS_FEED_ENABLED=true
RSS_FEED_TITLE="سبق الذكية - البودكاست"
RSS_FEED_DESCRIPTION="أحدث حلقات البودكاست من سبق الذكية"
RSS_FEED_LANGUAGE="ar-SA"
RSS_FEED_COPYRIGHT="© 2024 سبق الذكية"

# إعدادات الإحصائيات والتقارير
STATS_RETENTION_DAYS=365
STATS_AGGREGATION_INTERVAL=3600  # كل ساعة

# إعدادات التحميل والرفع
UPLOAD_CHUNK_SIZE=1048576  # 1MB chunks
UPLOAD_MAX_CONCURRENT=3
UPLOAD_RETRY_ATTEMPTS=3
