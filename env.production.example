# قاعدة البيانات - MySQL عبر PlanetScale
DATABASE_URL="mysql://username:password@host/jur3a-production?ssl=true&sslaccept=strict"

# بيئة التطبيق
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://jur3a.ai

# NextAuth للمصادقة
NEXTAUTH_URL=https://jur3a.ai
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# JWT Secret
JWT_SECRET=generate-with-openssl-rand-base64-32

# API Security
API_SECRET_KEY=generate-secure-key-here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# البريد الإلكتروني (Gmail مثال)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=noreply@jur3a.ai
EMAIL_SERVER_PASSWORD=app-specific-password
EMAIL_FROM="Jur3a AI <noreply@jur3a.ai>"

# تحليلات (اختياري)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# تخزين الملفات (S3 أو Supabase)
# خيار 1: AWS S3
S3_BUCKET=jur3a-production-media
S3_ACCESS_KEY=AKIA...
S3_SECRET_KEY=...
S3_REGION=me-south-1

# خيار 2: Supabase Storage
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_STORAGE_BUCKET=jur3a-media

# AI Services (OpenAI)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# إعدادات الأمان
CORS_ALLOWED_ORIGINS=https://jur3a.ai,https://www.jur3a.ai
SESSION_SECRET=generate-secure-session-secret

# نسخ احتياطي
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=jur3a-backups
BACKUP_RETENTION_DAYS=30

# إعدادات مهمة - لا تغيرها!
SEED_FAKE_DATA=false
USE_MOCK_DATA=false
ENABLE_DEBUG_LOGS=false 