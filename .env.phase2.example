# Phase-2 Performance Environment Variables
# Add these to your .env file for maximum performance

# Database Connection Pool Settings
DATABASE_URL="your_postgresql_connection_string"
POSTGRES_PRISMA_POOL_MAX=20

# Redis Cache Settings  
REDIS_URL="redis://localhost:6379"

# Next.js Performance Settings
NODE_ENV=production

# Enable performance monitoring
TIMING_ENABLED=true

# Bundle optimization
MODULARIZE_IMPORTS=true

# Example with DigitalOcean/production settings:
# DATABASE_URL="postgresql://user:pass@host:25060/dbname?sslmode=require&pool_size=20"
# REDIS_URL="redis://default:password@host:25061"

