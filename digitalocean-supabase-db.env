# DigitalOcean with Supabase Database (Unified)
# توحيد قاعدة البيانات على Supabase للتطوير والإنتاج

# قاعدة بيانات Supabase للإنتاج
# يُنصح بإنشاء مشروع Supabase منفصل للإنتاج
DATABASE_URL="postgresql://postgres:YOUR_PRODUCTION_SUPABASE_PASSWORD@YOUR_PRODUCTION_SUPABASE_HOST:5432/postgres"
DIRECT_URL="postgresql://postgres:YOUR_PRODUCTION_SUPABASE_PASSWORD@YOUR_PRODUCTION_SUPABASE_HOST:5432/postgres"

# إعدادات المصادقة
NEXTAUTH_SECRET="sabq-ai-cms-secret-key-2025"
NEXTAUTH_URL="https://sabq.io"

# بيئة الإنتاج
NODE_ENV="production"

# إعدادات AWS S3 للصور
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="sabq-cms-content"

# إعدادات OpenAI (اختياري)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# إعدادات ElevenLabs (اختياري)
ELEVENLABS_API_KEY="YOUR_ELEVENLABS_API_KEY" 