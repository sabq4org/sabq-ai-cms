{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/cron/generate-podcast",
      "schedule": "0 6,12,18 * * *"
    },
    {
      "path": "/api/cron/update-word-popularity",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/publish-scheduled",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/internal/cron/announcements",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}