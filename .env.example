# ====================================
# SABQ AI CMS - Environment Variables
# ====================================

# Application
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="صحيفة سبق الذكية"

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# Database (Optional - for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/sabq_ai_cms

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# AI Services (Optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@sabq-ai.com

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/avif

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_LOYALTY_SYSTEM=true
ENABLE_DARK_MODE=true
ENABLE_PERSONALIZATION=true

# Development
DEV_VERIFICATION_CODE=000000
