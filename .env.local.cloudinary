# ==============================================
# إعدادات Cloudinary لحل مشكلة Upload Preset
# ==============================================

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=dybhezmvb
CLOUDINARY_API_KEY=your-api-key-here
CLOUDINARY_API_SECRET=your-api-secret-here

# Public Cloudinary Settings
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=dybhezmvb

# ملاحظات هامة:
# 1. احصل على المفاتيح من Cloudinary Console: https://cloudinary.com/console
# 2. استبدل your-api-key-here و your-api-secret-here بالقيم الحقيقية
# 3. انسخ هذه المتغيرات إلى ملف .env.local الأساسي
# 4. لا تشارك API SECRET أبداً في الكود المرفوع

# خطوات الحصول على المفاتيح:
# 1. سجل دخول إلى Cloudinary Console
# 2. اذهب إلى Dashboard
# 3. انسخ Cloud Name, API Key, API Secret
# 4. ضعها في .env.local

# إعدادات الرفع (اختيارية)
CLOUDINARY_UPLOAD_FOLDER=sabq-cms
CLOUDINARY_MAX_FILE_SIZE=10485760  # 10MB
