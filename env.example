# ==============================================
# منصة سبق الذكية - متغيرات البيئة
# ==============================================

# === تكوين الموقع ===
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="صحيفة سبق الإلكترونية"

# === قاعدة البيانات (Prisma) ===
# PostgreSQL (موصى به للإنتاج)
DATABASE_URL="postgresql://user:password@localhost:5432/sabq_db"

# MySQL (بديل)
# DATABASE_URL="mysql://user:password@localhost:3306/sabq_db"

# SQLite (للتطوير المحلي فقط)
# DATABASE_URL="file:./dev.db"

# === المصادقة والأمان ===
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# === الذكاء الاصطناعي (اختياري) ===
# OpenAI API
OPENAI_API_KEY=sk-...

# Anthropic Claude API  
ANTHROPIC_API_KEY=sk-ant-...

# === البريد الإلكتروني (اختياري) ===
# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# SendGrid (بديل)
# SENDGRID_API_KEY=SG...

# === التخزين السحابي (اختياري) ===
# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Supabase Storage
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# === التحليلات (اختياري) ===
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# === ميزات النظام ===
# تفعيل/تعطيل ميزات معينة
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_LOYALTY_SYSTEM=true
ENABLE_COMMENTS=true

# === بيئة التطوير ===
NODE_ENV=development
SKIP_EMAIL_VERIFICATION=true
DEBUG_MODE=false

# === حدود النظام ===
MAX_UPLOAD_SIZE=5242880  # 5MB
MAX_ARTICLES_PER_PAGE=20
SESSION_TIMEOUT=86400  # 24 hours in seconds

# === مفاتيح خارجية (اختياري) ===
# Google Maps API
# GOOGLE_MAPS_API_KEY=AIza...

# Twitter API
# TWITTER_API_KEY=...
# TWITTER_API_SECRET=...

# === ملاحظات ===
# 1. انسخ هذا الملف إلى .env.local
# 2. قم بتحديث القيم حسب بيئتك
# 3. لا تشارك المفاتيح السرية أبداً
# 4. في الإنتاج، استخدم متغيرات البيئة من لوحة التحكم 