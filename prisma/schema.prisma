  created_at       DateTime
  updated_at       DateTime
}

model user_reading_sessions {
  id               String    @id
  user_id          String
  article_id       String
  started_at       DateTime?
  ended_at         DateTime?
  duration_seconds Int?
  read_percentage  Float?
  scroll_depth     Float?
  device_type      String?
  time_of_day      Int?
  created_at       DateTime?
}

model user_insights {
  id                      String    @id
  user_id                 String    @unique
  total_reads             Int?
  total_saved             Int?
  total_interactions      Int?
  avg_read_time           Float?
  preferred_reading_time  String?
  reader_type             String?
  diversity_score         Float?
  preferred_categories    Json?
  preferred_article_types Json?
  avg_article_length      Int?
  weekly_reads            Int?
  weekly_streak           Int?
