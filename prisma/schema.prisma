  likes           Int                   @default(0)
  shares          Int                   @default(0)
  saves           Int                   @default(0)
  readingTime     Int?
  featuredImage   String?
  audioUrl        String?
  seoKeywords     String[]
  publishedAt     DateTime?
  metadata        Json?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime
  opinion_authors opinion_authors       @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([category])
  @@index([publishedAt])
  @@index([status, isActive])
}

model opinion_authors {
  id               String             @id
  name             String
  email            String?            @unique
  title            String?
  avatarUrl        String?
  bio              String?
  category         String?
  twitterUrl       String?
  linkedinUrl      String?
  websiteUrl       String?
  isActive         Boolean            @default(true)
  displayOrder     Int?
  metadata         Json?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  opinion_articles opinion_articles[]
}

model password_reset_tokens {
  id         String    @id
  user_id    String
  token      String    @unique @db.VarChar(255)
  expires_at DateTime
  used_at    DateTime?
  created_at DateTime  @default(now())

  @@index([expires_at])
  @@index([token])
  @@index([user_id])
}

